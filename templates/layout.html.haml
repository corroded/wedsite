<!doctype html>
%html
  %head
    %link{:href => "http://fonts.googleapis.com/css?family=Yanone+Kaffeesatz|Vidaloka|Abril+Fatface|Alice", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "/stylesheets/main.css", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "/stylesheets/jquery.lightbox-0.5.css", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "/index.xml", :rel => "alternate", :title => "#{title} - atom feed", :type => "application/atom+xml"}/
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title= title
    %script{:src => "javascripts/jquery.min.js", :type => "text/javascript"}
    %script{:src => "javascripts/jquery.lightbox-0.5.min.js", :type => "text/javascript"}

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-25941743-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

  %body
    %header
      %h1
        %a{:href => "/"}= @config[:title]
      %h3.sub-title
        the wedding blog of #{@config[:author]}
    %nav
      %ul
        %li
          %a{:href => "/"} home
        %li
          %a{:href => "/gallery"} gallery
        -#%li
          -#%a{:href => "/index.xml"} feed
        -#%li disable first, not working
        -#  %a{:href => "/archives"} archives
        %li
          %a{:href => "/about"} about
        %li
          %a{:href => "/suppliers"} suppliers
    %section#content
      = yield
    %footer#footer
      powered by
      %a{:href => "http://github.com/dreamr/ruby-slippers"} ruby-slippers

