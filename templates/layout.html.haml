<!doctype html>
%html
  %head
    %link{:href => "http://fonts.googleapis.com/css?family=Yanone+Kaffeesatz", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "/stylesheets/main.css", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "/index.xml", :rel => "alternate", :title => "#{title} - atom feed", :type => "application/atom+xml"}/
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title= title
  %body
    %header
      %h1
        %a{:href => "/"}= @config[:title]
      %h3
        a blog by #{@config[:author]}
    %menu
      %ul
        %li
          %a{:href => "/"} home
        %li
          %a{:href => "/index.xml"} feed
        %li
          %a{:href => "/archives"} archives
        %li
          %a{:href => "/about"} about
        %li
          %a{:href => "/suppliers"} suppliers
    %section#content
      = yield
    %footer
      powered by
      %a{:href => "http://github.com/dreamr/ruby-slippers"} ruby-slippers
    %script{:src => "/javascripts/tracking.js"}

